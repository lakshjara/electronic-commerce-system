#include <iostream>
#include "Customer.h"
#include "Product.h"
#include "Card.h"
#include "Cash.h"
using namespace std;

int main() {
    // Create a customer
    Customer customer1(1, "John Doe", "john.doe@example.com");

    // Create a product
    Product product1(101, "Laptop", 1200.50);

    // Create a card transaction
    Card cardTransaction(1001, customer1, 1200.50, product1, "Bank of America");
    cout << "Card Transaction Details:\n" << cardTransaction.getTransactionData() << endl;

    // Create a cash transaction
    Cash cashTransaction(1002, customer1, 1200.50, product1, "Five $100 bills, Ten $50 bills");
    cout << "\nCash Transaction Details:\n" << cashTransaction.getTransactionData() << endl;

    return 0;
}

